@{
    ViewBag.Title = "Position";
}

<h1>Position</h1>

<script src="@Url.Content("~/Scripts/glMatrix-0.9.5.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/webgl-utils.js")" type="text/javascript"></script>

<span id="Example"></span>
<br />
<canvas id="canvas" style="border: none;" width="500" height="500"></canvas>

<script id="shader-fs" type="x-shader/x-fragment">
    precision mediump float;

    varying vec4 vColor;

    void main(void) {
        gl_FragColor = vColor;
    }
</script>

<script id="shader-vs" type="x-shader/x-vertex">
    attribute vec3 aVertexPosition;
    attribute vec4 aVertexColor;

    uniform mat4 uMVMatrix;
    uniform mat4 uPMatrix;

    varying vec4 vColor;

    void main(void) {
        gl_Position = uPMatrix * uMVMatrix * vec4(aVertexPosition, 1.0);
        vColor = aVertexColor;
    }
</script>
<script src="@Url.Content("~/Scripts/Rendering.js")" type="text/javascript"></script>

